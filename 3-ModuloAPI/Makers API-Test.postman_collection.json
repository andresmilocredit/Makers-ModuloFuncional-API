    {
      "name": "Post data",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let data = pm.response.json();",
              "let camposObligatorios = [\"name\", \"job\"];",
              "const onlyLetters = /^[A-Za-zÁÉÍÓÚáéíóúÑñ\\s]+$/;",
              "const sqlPattern = /(SELECT|DROP|DELETE|INSERT|UPDATE|--)/i;",
              "",
              "//********************************************* */",
              "//Validacion de Campos obligatorios no Vacios. ",
              "//********************************************* */",
              "pm.test(\"Campos Obligatorios No Vacios\", function(){",
              "    let errores = [];",
              "    camposObligatorios.forEach(campo => {",
              "            if(!data[campo]){",
              "                errores.push(\"Campo \" + campo + \" esta vacio\");",
              "                }",
              "    });",
              "pm.expect(errores, errores.join(\" | \")",
              ").to.be.empty;",
              "});",
              "",
              "//************************ */",
              "//Validacion Solo letras",
              "//************************ */",
              "function validaLetras(campo, valor, errores){",
              "    if(!onlyLetters.test(valor)){",
              "        errores.push(\"El campo \" + campo + \" solo debe contener letras\");",
              "    }",
              "}",
              "",
              "pm.test(\"Validar solo letras\", function () {",
              "    let errores = [];",
              "    validaLetras(\"name\", data.name, errores);",
              "    validaLetras(\"job\", data.job, errores);",
              "    pm.expect(errores,errores.join(\" | \")",
              "     ).to.be.empty;",
              "});",
              "",
              "",
              "//***************************** */",
              "// Validacion de SQL Injection",
              "//***************************** */",
              "function validaSQLInjection(campo, valor, errores) {",
              "    if(sqlPattern.test(valor)){",
              "        errores.push(\"El campo \" + campo + \" contiene una inyección SQL\");",
              "    };",
              "}",
              "",
              "pm.test(\"Validar SQL Injection\", function () {",
              "    let errores = [];",
              "    validaSQLInjection(\"name\", data.name, errores);",
              "    validaSQLInjection(\"job\", data.job, errores);",
              "    pm.expect(errores,errores.join(\" | \")",
              "     ).to.be.empty;",
              "});",
              "",
              "",
              "",
              "//Codigo de Respuesta",
              "pm.test(\"Successful POST request\", function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              ""
            ],
